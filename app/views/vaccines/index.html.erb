<p id="notice"><%= notice %></p>

<h1>Vaccines</h1>
<p>Where to get vaccinated for specific infections / diseases.</p>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Disease</th>
    <th class="center">Location</th>
    <th class="center">Contact</th>
    <th class="center">Info</th>
    <th class="center">Action</th>
  </tr>
  <thead>
  </thead>

  <tbody>
    <% @vaccines.each do |v| %>
      <tr>
        <td><%= v.disease %></td>
        <td><%= v.location %></td>
        <td><%= v.contact %></td>
        <td><%= v.info %></td>
        <td>
        <%= link_to "Update",edit_vaccine_path(v), class: "btn btn-link" %>
        <%= link_to "Delete",v, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add vaccine', new_vaccine_path, class: "btn btn-link" %>
<div class="center">
   <%= will_paginate @vaccines, renderer: BootstrapPagination::Rails %>
</div>