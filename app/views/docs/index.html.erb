<p id="notice"><%= notice %></p>

<h1>Doctors</h1>
<p>Available doctors. Please consult doctors on availability prior to adding them.</p>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Name</th>
    <th class="center">Location</th>
    <th class="center">Contact</th>
    <th class="center">Action</th>
  </tr>
  <thead>
  </thead>

  <tbody>
    <% @docs.each do |doc| %>
      <tr>
        <td><%= doc.name %></td>
        <td><%= doc.location %></td>
        <td><%= doc.contact %></td>
        <td>
        <%= link_to "Update",edit_doc_path(doc), class: "btn btn-link" %>
        <%= link_to "Delete",doc, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Doctor', new_doc_path, class: "btn btn-link" %>
<div class="center">
   <%= will_paginate @docs, renderer: BootstrapPagination::Rails %>
</div>
