<p id="notice"><%= notice %></p>

<h1>General Information</h1>
<p>General information on disease prevention and being safe during the crisis.</p>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Topic</th>
    <th class="center">Details</th>
    <th class="center">Action</th>
  </tr>
  <thead>
  </thead>

  <tbody>
    <% @miscs.each do |misc| %>
      <tr>
        <td><%= misc.subject %></td>
        <td><%= misc.details %></td>
        <td>
        <%= link_to "Update",edit_misc_path(misc), class: "btn btn-link" %>
        <%= link_to "Delete",misc, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new topic', new_misc_path, class: "btn btn-link" %>
<div class="center">
   <%= will_paginate @miscs, renderer: BootstrapPagination::Rails %>
</div>