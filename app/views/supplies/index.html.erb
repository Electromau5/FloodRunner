<p id="notice"><%= notice %></p>

<h1>Supplies Needed</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Requirements</th>
    <th class="center">Location</th>
    <th class="center">Contact</th>
    <th class="center">Additional Info</th>
    <th class="center">Action</th>
  </tr>
  <thead>
  </thead>

  <tbody>
    <% @supplies.each do |v| %>
      <tr>
        <td><%= v.requirement %></td>
        <td><%= v.location %></td>
        <td><%= v.contact %></td>
        <td><%= v.info %></td>
        <td>
        <%= link_to "Update",edit_supply_path(v), class: "btn btn-link" %>
        <%= link_to "Delete",v, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Requirement', new_supply_path, class: "btn btn-link" %>
<div class="center">
   <%= will_paginate @supplies, renderer: BootstrapPagination::Rails %>
</div>